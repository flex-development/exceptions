{
  "compilerOptions": {
    "allowJs": true,
    "allowUnreachableCode": false,
    "baseUrl": "./",
    "checkJs": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "paths": {
      "@flex-development/grease": [
        "node_modules/@flex-development/grease/cjs/index"
      ],
      "@flex-development/grease/*": [
        "node_modules/@flex-development/grease/cjs/*"
      ],
      "@flex-development/log": ["node_modules/@flex-development/log/cjs/index"],
      "@flex-development/log/*": ["node_modules/@flex-development/log/cjs/*"],
      "@packages/exceptions/tests/fixtures/*": [
        "packages/exceptions/__tests__/__fixtures__/*"
      ],
      "@packages/exceptions/tests/*": ["packages/exceptions/__tests__/*"],
      "@packages/exceptions/*": ["packages/exceptions/src/*"],
      "@packages/exceptions": ["packages/exceptions/src/index.ts"],
      "@tests/fixtures/*": ["__tests__/__fixtures__/*"],
      "@tests/*": ["__tests__/*"]
    },
    "preserveConstEnums": true,
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "strictPropertyInitialization": false,
    "suppressImplicitAnyIndexErrors": true,
    "strict": true,
    "target": "es2018"
  },
  "exclude": ["**/build", "**/cjs", "**/esm", "**/node_modules"],
  "files": ["typings/jest.d.ts"],
  "include": [
    "__mocks__",
    "__tests__",
    "helpers",
    "packages",
    "tools",
    "typings",
    "*.cjs",
    "*.js",
    "*.ts"
  ]
}

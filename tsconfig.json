{
  "compilerOptions": {
    "allowJs": true,
    "allowUnreachableCode": false,
    "baseUrl": "./",
    "checkJs": false,
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": false,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2021"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "paths": {
      "@flex-development/grease": [
        "node_modules/@flex-development/grease/cjs/index"
      ],
      "@flex-development/grease/*": [
        "node_modules/@flex-development/grease/cjs/*"
      ],
      "@flex-development/log": ["node_modules/@flex-development/log/cjs/index"],
      "@flex-development/log/*": ["node_modules/@flex-development/log/cjs/*"],
      "@flex-development/tutils": [
        "packages/exceptions/node_modules/@flex-development/tutils/esm/index"
      ],
      "@flex-development/tutils/*": [
        "packages/exceptions/node_modules/@flex-development/tutils/esm/*"
      ],
      "@packages/exceptions/tests/fixtures/*": [
        "packages/exceptions/__tests__/__fixtures__/*"
      ],
      "@packages/exceptions/tests/*": ["packages/exceptions/__tests__/*"],
      "@packages/exceptions/*": ["packages/exceptions/src/*"],
      "@packages/exceptions": ["packages/exceptions/src/index.ts"],
      "@tests/fixtures/*": ["__tests__/__fixtures__/*"],
      "@tests/*": ["__tests__/*"]
    },
    "preserveConstEnums": true,
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "strictPropertyInitialization": false,
    "suppressImplicitAnyIndexErrors": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2021"
  },
  "exclude": [
    "**/node_modules",
    "packages/*/build",
    "packages/*/cjs",
    "packages/*/dist",
    "packages/*/esm5",
    "packages/*/esm2015",
    "packages/*/types"
  ],
  "files": ["typings/jest.d.ts"],
  "include": [
    "__mocks__",
    "__tests__",
    "packages",
    "tools",
    "typings",
    "*.cjs",
    "*.js",
    "*.ts"
  ]
}

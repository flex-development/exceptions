{
  "name": "@flex-development/p005",
  "description": "Custom error handling",
  "keywords": [],
  "homepage": "https://github.com/flex-development/exceptions",
  "repository": "git@github.com:flex-development/exceptions.git",
  "bugs": {
    "url": "https://github.com/flex-development/exceptions/issues"
  },
  "contributors": [
    {
      "name": "Lexus Drumgold",
      "url": "https://github.com/unicornware"
    }
  ],
  "type": "module",
  "scripts": {
    "clean:build": "rimraf ./packages/*/(build|cjs|esm|types|*.tgz) || true",
    "clean:modules": "rimraf ./node_modules ./packages/*/node_modules",
    "clean:yarn": "rimraf .yarn/cache .yarn/*.gz",
    "clean": "concurrently \"yarn:clean:*\"",
    "bootstrap": ". ./.env && yarn prepack",
    "postinstall": "is-ci || chmod +x .husky/* && husky install",
    "prepack": "yarn workspaces foreach -iv --topological-dev run prepack",
    "check:ci": "yarn check:types && yarn check:format && yarn check:style && yarn build --tarball && rimraf packages/*/*.tgz",
    "check:dedupe": "yarn dedupe --check",
    "check:format": "prettier --check .",
    "check:install": "yarn dlx @yarnpkg/doctor .",
    "check:integrity": "yarn check:dedupe && yarn check:install",
    "check:style": "eslint . --ext cjs,cts,md,mjs,mts,ts --max-warnings 0",
    "check:types": "tsc -p tsconfig.spec.json",
    "check:upgrades": "yarn upgrade-interactive",
    "fix:format": "prettier --write .",
    "fix:style": "yarn check:style --fix --cache",
    "test": "bash tools/scripts/jest.sh",
    "test:exceptions": "yarn workspace @flex-development/exceptions test",
    "build": "yarn workspaces foreach -iv --topological-dev run build",
    "build:exceptions": "yarn workspace @flex-development/exceptions build",
    "release:exceptions": "yarn workspace @flex-development/exceptions release"
  },
  "devDependencies": {
    "@babel/core": "7.16.0",
    "@commitlint/cli": "13.2.1",
    "@commitlint/config-conventional": "13.2.0",
    "@commitlint/types": "13.2.0",
    "@flex-development/grease": "2.0.0",
    "@flex-development/log": "4.0.1-dev.0",
    "@flex-development/trext": "2.0.4",
    "@flex-development/tutils": "4.2.3",
    "@jest/globals": "27.3.1",
    "@jest/types": "27.2.5",
    "@packages/exceptions": "link:packages/grease/src",
    "@types/jest": "27.0.2",
    "@types/lodash.merge": "4.6.6",
    "@types/lodash.omit": "4.5.6",
    "@types/mvdan-sh": "0.5.1",
    "@types/node": "16.0.0",
    "@types/resolve": "1.20.1",
    "@types/rimraf": "3.0.2",
    "@types/shelljs": "0.8.9",
    "@types/yargs": "17.0.5",
    "@typescript-eslint/eslint-plugin": "5.3.0",
    "@typescript-eslint/parser": "5.3.0",
    "@vercel/ncc": "0.31.1",
    "chalk": "4.1.2",
    "concurrently": "6.3.0",
    "dotenv": "10.0.0",
    "dotenv-expand": "5.1.0",
    "eslint": "8.1.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-node": "0.3.6",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-jest": "25.2.2",
    "eslint-plugin-jsdoc": "37.0.3",
    "eslint-plugin-markdown": "2.2.1",
    "eslint-plugin-markdownlint": "0.2.3",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-spellcheck": "0.0.19",
    "eslint-plugin-tree-shaking": "1.9.2",
    "eslint-plugin-unicorn": "37.0.1",
    "husky": "7.0.4",
    "is-ci": "3.0.1",
    "jest": "27.3.1",
    "jest-extended": "1.1.0",
    "jest-github-reporter": "1.0.2",
    "lint-staged": "11.2.6",
    "lodash.merge": "4.6.2",
    "lodash.omit": "4.5.0",
    "prettier": "2.4.1",
    "prettier-plugin-sh": "0.7.1",
    "read-pkg": "7.0.0",
    "replace-in-file": "6.3.2",
    "resolve-tspaths": "0.1.2",
    "rimraf": "3.0.2",
    "shelljs": "0.8.4",
    "ts-jest": "27.0.7",
    "ts-node": "10.4.0",
    "tsc-prog": "2.2.1",
    "tsconfig": "7.0.0",
    "tsconfig-paths": "3.11.0",
    "typescript": "4.5.0-beta",
    "yargs": "17.2.1"
  },
  "engines": {
    "node": ">=15.0.0",
    "npm": "use-yarn",
    "yarn": "3.0.2"
  },
  "packageManager": "yarn@3.0.2",
  "private": true,
  "workspaces": [
    "packages/*"
  ]

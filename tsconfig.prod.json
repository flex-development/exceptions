{
  "compilerOptions": {
    "declaration": false,
    "inlineSources": true,
    "noEmit": false,
    "outDir": "./build",
    "plugins": [
      {
        "afterDeclarations": true,
        "exclude": ["*"],
        "transform": "@zerollup/ts-transform-paths"
      }
    ],
    "removeComments": false,
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false
  },
  "exclude": [
    "**/__mocks__",
    "**/__tests__",
    "./browser",
    "./build",
    "./cjs",
    "./dist",
    "./esm",
    "./node_modules",
    "./types"
  ],
  "extends": "./tsconfig.json",
  "files": [],
  "include": ["src"]
}
